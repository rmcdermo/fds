! Reference: E. Pohlhausen, Z. Angew. Math. Mech., vol. 1, p. 115, 1921.
! See also: J. P. Holman. Heat Transfer. 7th Ed. McGraw-Hill, 1990. Appendix B.

&HEAD CHID='Pohlhausen_Pr_p5', TITLE='Forced convection heat transfer'/

&MULT ID='m1', DX=1.25,DZ=0.5 I_UPPER=7,K_UPPER=1/ 16 mesh
&MESH IJK=100,1,40, XB=0,1.25,-0.1,0.1,0,0.5, MULT_ID='m1'/

&TIME T_END=60/

&DUMP DT_DEVC=1/

&MISC SIMULATION_MODE='DNS', CHECK_HT=T, NOISE=F, TMPA=20., STRATIFICATION=F, GVEC(3)=0./

&PRES SOLVER='UGLMAT'/

&RADI RADIATION=F/

&SPEC ID='LJ AIR', VISCOSITY=1.E-3, CONDUCTIVITY=1, SPECIFIC_HEAT=0.5, BACKGROUND=.TRUE./ Pr=cp*mu/k=0.5

&SURF ID='hot plate', TMP_FRONT=21, COLOR='RED' /
&SURF ID='inlet', VEL=-1, COLOR='BLUE'/
&SURF ID='top', VEL_GRAD=0., FREE_SLIP=.TRUE., COLOR='INVISIBLE'/

&VENT DB='XMIN', SURF_ID='inlet'/
&VENT DB='XMAX', SURF_ID='OPEN'/
&VENT DB='ZMIN', SURF_ID='hot plate'/
&VENT DB='ZMAX', SURF_ID='top'/

&DEVC XYZ=9.95,0,0.5, QUANTITY='TEMPERATURE', ID='T_out'/

&DEVC XB=0.05,9.95,0,0,0,0, POINTS=100, IOR=3, STATISTICS_START=55, QUANTITY='CONVECTIVE HEAT FLUX', ID='q_wall', X_ID='x'/
&DEVC XB=0.05,9.95,0,0,0,0, POINTS=100, IOR=3, STATISTICS_START=55, QUANTITY='HEAT TRANSFER COEFFICIENT', ID='h_wall', HIDE_COORDINATES=T/
&DEVC XB=0.05,9.95,0,0,0,0, POINTS=100, IOR=3, STATISTICS_START=55, QUANTITY='WALL TEMPERATURE', ID='T_wall', HIDE_COORDINATES=T/
&DEVC XB=0.05,9.95,0,0,0,0, POINTS=100, IOR=3, STATISTICS_START=55, QUANTITY='GAS TEMPERATURE', ID='T_gas', HIDE_COORDINATES=T/
&DEVC XB=0.05,9.95,0,0,0.001,0.001, POINTS=100, STATISTICS_START=55, QUANTITY='VISCOSITY', ID='mu_wall', HIDE_COORDINATES=T/
&DEVC XB=0.05,9.95,0,0,0.001,0.001, POINTS=100, STATISTICS_START=55, QUANTITY='KINEMATIC VISCOSITY', ID='nu_wall', HIDE_COORDINATES=T/
&DEVC XB=0.05,9.95,0,0,0.001,0.001, POINTS=100, STATISTICS_START=55, QUANTITY='DENSITY', ID='rho_wall', HIDE_COORDINATES=T/

&DEVC XB=5,5,0,0,0,1, POINTS=50, STATISTICS_START=55, QUANTITY='TEMPERATURE', ID='Tz', SPATIAL_STATISTIC='INTERPOLATION', Z_ID='z'/
&DEVC XB=5,5,0,0,0,1, POINTS=50, STATISTICS_START=55, QUANTITY='U-VELOCITY', ID='Uz', SPATIAL_STATISTIC='INTERPOLATION', HIDE_COORDINATES=T/

&SLCF PBY=0, QUANTITY='VELOCITY', VECTOR=T/
&SLCF PBY=0, QUANTITY='TEMPERATURE', CELL_CENTERED=T/

&TAIL/

