&HEAD CHID='nat_conv_hot_plate_3_16', TITLE='Natural convection from downward facing hot plate' /

&MULT DX=5, DY=5, I_UPPER=3, J_UPPER=1 ID='m1' /
&MESH IJK=16,16,16, XB=-5,0.0,-5,0.0,0.0,5, MULT_ID='m1' /

&TIME T_END=500 /

&DUMP DT_DEVC=1. /

&MISC STRATIFICATION=F, SIMULATION_MODE='LES' /

&RADI RADIATION=F /

&SPEC ID='LJ AIR', SPECIFIC_HEAT=1., CONDUCTIVITY=0.018216, VISCOSITY=1.8216E-5, BACKGROUND=.TRUE./ ! Pr=1.00

&OBST XB=-2.5,2.5,-2.5,2.5,2.25,2.75, SURF_IDS='WALL','WALL','HOT' /
&OBST XB=7.5,12.5,-2.5,2.5,2.25,2.75, SURF_IDS='HOT','WALL','WALL' /

&SURF ID='WALL', ADIABATIC=T, DEFAULT=T /
&SURF ID='HOT', COLOR='RED', HEAT_TRANSFER_MODEL='RAYLEIGH', TMP_FRONT=230, CONVECTION_LENGTH_SCALE=1.25 /

&VENT MB='XMIN', SURF_ID='OPEN' /
&VENT MB='XMAX', SURF_ID='OPEN' /
&VENT MB='YMIN', SURF_ID='OPEN' /
&VENT MB='YMAX', SURF_ID='OPEN' /
&VENT MB='ZMIN', SURF_ID='OPEN' /
&VENT MB='ZMAX', SURF_ID='OPEN' /

&BNDF QUANTITY='HEAT TRANSFER COEFFICIENT', CELL_CENTERED=T/
&BNDF QUANTITY='CONVECTIVE HEAT FLUX', CELL_CENTERED=T/
&BNDF QUANTITY='THERMAL WALL UNITS', CELL_CENTERED=T /
&BNDF QUANTITY='VISCOUS WALL UNITS', CELL_CENTERED=T /

&SLCF PBY=0.001, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /

&DEVC ID='qdot1', QUANTITY='CONVECTIVE HEAT FLUX', XB=-2.5,2.5,-2.5,2.5,0.0,5, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /
&DEVC ID='qdot2', QUANTITY='CONVECTIVE HEAT FLUX', XB=7.5,12.5,-2.5,2.5,0.0,5, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /

&TAIL /
