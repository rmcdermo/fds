&HEAD CHID='nat_conv_hot_plate_4_32', TITLE='Natural convection from downward facing hot plate' /

&MULT DX=10, DY=10, I_UPPER=3, J_UPPER=1 ID='m1' /
&MESH IJK=32,32,32, XB=-10,0.0,-10,0.0,0.0,10, MULT_ID='m1' /

&TIME T_END=1000 /

&DUMP DT_DEVC=1. /

&MISC STRATIFICATION=F, SIMULATION_MODE='LES' /

&RADI RADIATION=F /

&SPEC ID='LJ AIR', SPECIFIC_HEAT=1., CONDUCTIVITY=0.018216, VISCOSITY=1.8216E-5, BACKGROUND=.TRUE./ ! Pr=1.00

&OBST XB=-5,5,-5,5,4.5,5.5, SURF_IDS='WALL','WALL','HOT' /
&OBST XB=15,25,-5,5,4.5,5.5, SURF_IDS='HOT','WALL','WALL' /

&SURF ID='WALL', ADIABATIC=T, DEFAULT=T /
&SURF ID='HOT', COLOR='RED', HEAT_TRANSFER_MODEL='RAYLEIGH', TMP_FRONT=50, CONVECTION_LENGTH_SCALE=2.5 /

&VENT MB='XMIN', SURF_ID='OPEN' /
&VENT MB='XMAX', SURF_ID='OPEN' /
&VENT MB='YMIN', SURF_ID='OPEN' /
&VENT MB='YMAX', SURF_ID='OPEN' /
&VENT MB='ZMIN', SURF_ID='OPEN' /
&VENT MB='ZMAX', SURF_ID='OPEN' /

&BNDF QUANTITY='HEAT TRANSFER COEFFICIENT', CELL_CENTERED=T/
&BNDF QUANTITY='CONVECTIVE HEAT FLUX', CELL_CENTERED=T/
&BNDF QUANTITY='THERMAL WALL UNITS', CELL_CENTERED=T /
&BNDF QUANTITY='VISCOUS WALL UNITS', CELL_CENTERED=T /

&SLCF PBY=0.001, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /

&DEVC ID='qdot1', QUANTITY='CONVECTIVE HEAT FLUX', XB=-5,5,-5,5,0.0,10, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /
&DEVC ID='qdot2', QUANTITY='CONVECTIVE HEAT FLUX', XB=15,25,-5,5,0.0,10, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /

&TAIL /
