&HEAD CHID='nat_conv_hot_plate_5_16', TITLE='Natural convection from downward facing hot plate' /

&MULT DX=0.05, DY=0.05, I_UPPER=3, J_UPPER=1 ID='m1' /
&MESH IJK=16,16,16, XB=-0.05,0.0,-0.05,0.0,0.0,0.05, MULT_ID='m1' /

&TIME T_END=5 /

&DUMP DT_DEVC=1. /

&MISC STRATIFICATION=F, SIMULATION_MODE='LES' /

&RADI RADIATION=F /

&SPEC ID='LJ AIR', SPECIFIC_HEAT=1., CONDUCTIVITY=0.018216, VISCOSITY=1.8216E-5, BACKGROUND=.TRUE./ ! Pr=1.00

&OBST XB=-0.025,0.025,-0.025,0.025,0.0225,0.0275, SURF_IDS='WALL','WALL','HOT' /
&OBST XB=0.075,0.125,-0.025,0.025,0.0225,0.0275, SURF_IDS='HOT','WALL','WALL' /

&SURF ID='WALL', ADIABATIC=T, DEFAULT=T /
&SURF ID='HOT', COLOR='RED', HEAT_TRANSFER_MODEL='RAYLEIGH', TMP_FRONT=50, CONVECTION_LENGTH_SCALE=0.013 /

&VENT MB='XMIN', SURF_ID='OPEN' /
&VENT MB='XMAX', SURF_ID='OPEN' /
&VENT MB='YMIN', SURF_ID='OPEN' /
&VENT MB='YMAX', SURF_ID='OPEN' /
&VENT MB='ZMIN', SURF_ID='OPEN' /
&VENT MB='ZMAX', SURF_ID='OPEN' /

&BNDF QUANTITY='HEAT TRANSFER COEFFICIENT', CELL_CENTERED=T/
&BNDF QUANTITY='CONVECTIVE HEAT FLUX', CELL_CENTERED=T/
&BNDF QUANTITY='THERMAL WALL UNITS', CELL_CENTERED=T /
&BNDF QUANTITY='VISCOUS WALL UNITS', CELL_CENTERED=T /

&SLCF PBY=0.001, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /

&DEVC ID='qdot1', QUANTITY='CONVECTIVE HEAT FLUX', XB=-0.025,0.025,-0.025,0.025,0.0,0.05, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /
&DEVC ID='qdot2', QUANTITY='CONVECTIVE HEAT FLUX', XB=0.075,0.125,-0.025,0.025,0.0,0.05, SURF_ID='HOT', SPATIAL_STATISTIC='SURFACE INTEGRAL', CONVERSION_FACTOR=-1. /

&TAIL /
